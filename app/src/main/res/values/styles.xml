<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="ThemeOrange" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/deep_orange_500</item>
        <item name="colorPrimaryDark">@color/deep_orange_700</item>
        <item name="colorAccent">@color/deep_orange_A200</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">120sp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="cardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="textviewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/game_1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>
